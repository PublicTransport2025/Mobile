<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/fragment_background"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp">

        <TextView
            android:id="@+id/adv_title"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="@string/adv1_title"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textAppearance="@style/DefaultTextReverse"
            android:textSize="24sp" />

        <ImageButton
            android:id="@+id/button_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="10dp"
            android:background="?attr/selectableItemBackground"
            android:padding="6dp"
            android:src="@drawable/close"
            app:tint="@color/textcolor"/>
    </LinearLayout>

    <TextView
        android:id="@+id/adv_about"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:text="@string/adv1_about"
        android:textAppearance="@style/DefaultTextReverse"
        android:textSize="16sp"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/adv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
        android:layout_marginHorizontal="20dp"
        android:text="@string/adv1_name"
        android:textAppearance="@style/DefaultTextReverse"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/adv_url"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/adv1_url"
        android:autoLink="web"
        android:linksClickable="true"
        android:textAppearance="@style/DefaultTextReverse"
        android:textColorLink="@color/link"
        android:textSize="16sp"
        android:layout_marginHorizontal="20dp"
        />





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_open"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:text="Перейти"
            android:textAppearance="@style/DefaultText"
            android:textColor="@color/button_text"
            app:backgroundTint="@color/akcent" />

        <Button
            android:id="@+id/button_discard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:text="Закрыть"
            android:textAppearance="@style/DefaultText"
            android:textColor="@color/akcent"
            app:backgroundTint="@color/white"
            app:strokeColor="@color/akcent"
            app:strokeWidth="2dp" />
    </LinearLayout>


</LinearLayout>