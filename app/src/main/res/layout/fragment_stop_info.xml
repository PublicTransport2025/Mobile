<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/fragment_background"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/stop_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Название остановки"
        android:textSize="24sp"
        android:textAppearance="@style/DefaultTextReverse"
        android:layout_margin="10dp"/>
    <TextView
        android:id="@+id/stop_about"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Направление"
        android:textSize="18sp"
        android:textAppearance="@style/DefaultTextReverse"
        android:layout_margin="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_from"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Отсюда"
            android:layout_margin="10dp"
            app:backgroundTint="@color/akcent"
            android:textColor="@color/button_text"
            android:textAppearance="@style/DefaultText"/>

        <Button
            android:id="@+id/button_to"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Сюда"
            android:layout_margin="10dp"
            app:backgroundTint="@color/akcent"
            android:textColor="@color/button_text"
            android:textAppearance="@style/DefaultText"/>
    </LinearLayout>


</LinearLayout>