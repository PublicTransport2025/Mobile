<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/fragment_background"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/stop_name"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Название остановки"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textAppearance="@style/DefaultTextReverse"
            android:textSize="24sp" />

        <ImageButton
            android:id="@+id/button_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="10dp"
            android:background="?attr/selectableItemBackground"
            android:padding="6dp"
            android:src="@drawable/close"
            app:tint="@color/textcolor"/>
    </LinearLayout>

    <TextView
        android:id="@+id/stop_about"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Направление"
        android:textAppearance="@style/DefaultTextReverse"
        android:textSize="18sp" />

    <Button
        android:id="@+id/button_like"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:text="Добавить в избранное"
        android:textColor="@color/button_text"
        android:textAppearance="@style/DefaultText"
        app:backgroundTint="@color/akcent" />

    <Button
        android:id="@+id/button_dislike"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:text="Удалить из избранного"
        android:textAppearance="@style/DefaultText"
        android:textColor="@color/akcent"
        app:backgroundTint="@color/white"
        app:strokeColor="@color/akcent"
        app:strokeWidth="2dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_from"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:text="Отсюда"
            android:textAppearance="@style/DefaultText"
            android:textColor="@color/button_text"
            app:backgroundTint="@color/akcent" />

        <Button
            android:id="@+id/button_to"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:text="Сюда"
            android:textAppearance="@style/DefaultText"
            android:textColor="@color/button_text"
            app:backgroundTint="@color/akcent" />
    </LinearLayout>


</LinearLayout>