<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/fragment_background"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/button_close2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="5dp"
            android:background="?attr/selectableItemBackground"
            android:padding="6dp"
            android:src="@drawable/close"
            android:visibility="invisible"
            app:tint="@color/textcolor" />

        <TextView
            android:id="@+id/header_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="Точка на карте"
            android:textAlignment="center"
            android:textAppearance="@style/DefaultTextReverse"
            android:textSize="24sp" />

        <ImageButton
            android:id="@+id/button_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="5dp"
            android:background="?attr/selectableItemBackground"
            android:padding="6dp"
            android:src="@drawable/close"
            app:tint="@color/textcolor" />
    </LinearLayout>

    <TextView
        android:id="@+id/label_about"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="5dp"
        android:text="Направление"
        android:textAppearance="@style/DefaultTextReverse"
        android:textSize="18sp" />

    <Button
        android:id="@+id/button_event"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginBottom="10dp"
        android:text="Добавить дорожное событие"
        android:textAppearance="@style/DefaultText"
        android:textColor="@color/button_text"
        app:backgroundTint="@color/akcent" />


    <LinearLayout
        android:id="@+id/input_event_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <Button
            android:id="@+id/button_type_event"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:text="Тип происшествия"
            android:textAppearance="@style/DefaultText"
            android:textColor="@color/akcent"
            app:backgroundTint="@color/white"
            app:strokeColor="@color/akcent"
            app:strokeWidth="2dp" />

        <Button
            android:id="@+id/button_line_event"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:text="Полоса движения"
            android:textAppearance="@style/DefaultText"
            android:textColor="@color/akcent"
            app:backgroundTint="@color/white"
            app:strokeColor="@color/akcent"
            app:strokeWidth="2dp" />

        <Button
            android:id="@+id/button_save_event"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="10dp"
            android:text="Добавить"
            android:textAppearance="@style/DefaultText"
            android:textColor="@color/button_text"
            app:backgroundTint="@color/akcent" />
    </LinearLayout>


</LinearLayout>